<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" 
	    android:layout_height="match_parent"
	    android:orientation="vertical"
        android:paddingRight="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbarSize="8dp"
        android:scrollbarThumbVertical="@drawable/appolis_gray4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/ll_clientName"
            android:layout_marginBottom="5dp"
            android:textColor="@color/Black"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/sp_pop_client"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/Black"
            android:orientation="vertical">
            <TextView
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textColor="@color/GrayAppolis"
                android:textSize="14sp"
                android:text="Username: "/>
            <EditText
                android:id="@+id/etpop_username"
                android:layout_weight="1"
                android:singleLine="true"
                android:textSize="14sp"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:imeOptions="actionNext"
                android:layout_height="30dp"
                android:background="@drawable/appolis_gray5"
                android:maxLines="1" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/Black"
        android:orientation="vertical">
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:textColor="@color/GrayAppolis"
            android:textSize="14sp"
            android:text="First Name: "/>
        <EditText
            android:id="@+id/etpop_firstname"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="14sp"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:imeOptions="actionNext"
            android:layout_height="30dp"
            android:background="@drawable/appolis_gray5"
            android:maxLines="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/Black"
        android:orientation="vertical">
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:textColor="@color/GrayAppolis"
            android:textSize="14sp"
            android:text="Last Name: "/>
        <EditText
            android:id="@+id/etpop_lastname"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="14sp"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:imeOptions="actionNext"
            android:layout_height="30dp"
            android:background="@drawable/appolis_gray5"
            android:maxLines="1" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_user_pass"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/Black"
            android:orientation="vertical">
            <TextView
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textColor="@color/GrayAppolis"
                android:textSize="14sp"
                android:text="Password: "/>
            <EditText
                android:id="@+id/etpop_password"
                android:layout_weight="1"
                android:singleLine="true"
                android:textSize="14sp"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:imeOptions="actionNext"
                android:layout_height="30dp"
                android:background="@drawable/appolis_gray5"
                android:maxLines="1" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/Black"
        android:orientation="vertical">
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:textColor="@color/GrayAppolis"
            android:textSize="14sp"
            android:text="Email: "/>
        <EditText
            android:id="@+id/etpop_email"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="14sp"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:imeOptions="actionNext"
            android:layout_height="30dp"
            android:background="@drawable/appolis_gray5"
            android:maxLines="1" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/Black"
        android:orientation="vertical">
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:textColor="@color/GrayAppolis"
            android:textSize="14sp"
            android:text="Phone: "/>
        <EditText
            android:id="@+id/etpop_phone"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="14sp"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:imeOptions="actionNext"
            android:layout_height="30dp"
            android:background="@drawable/appolis_gray5"
            android:maxLines="1" />

    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/Black"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/GrayAppolis"
                    android:textSize="14sp"
                    android:text="Ext: "/>
                <EditText
                    android:id="@+id/etpop_ext"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:imeOptions="actionNext"
                    android:layout_height="30dp"
                    android:background="@drawable/appolis_gray5"
                    android:maxLines="1" />

            </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/Black"
            android:orientation="vertical">
            <TextView
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textColor="@color/GrayAppolis"
                android:textSize="14sp"
                android:text="Cell Phone: "/>
            <EditText
                android:id="@+id/etpop_cell"
                android:layout_weight="1"
                android:singleLine="true"
                android:textSize="14sp"
                android:padding="4dp"
                android:hint="Optional"
                android:layout_width="match_parent"
                android:imeOptions="actionDone"
                android:layout_height="30dp"
                android:background="@drawable/appolis_gray5"
                android:maxLines="1" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/Black"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:textColor="@color/GrayAppolis"
            android:textSize="14sp"
            android:text="Administrator: "/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/GrayAppolis"
            android:id="@+id/switch1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:textColor="@color/GrayAppolis"
            android:textSize="14sp"
            android:text="Active User: "/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/GrayAppolis"
            android:id="@+id/switch2" />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_case_approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textColor="@color/GrayAppolis"
                android:textSize="14sp"
                android:text="Case Approval: "/>
            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/GrayAppolis"
                android:id="@+id/switch3" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
        </FrameLayout>

    <LinearLayout
        android:id="@+id/llArrowUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:background="@drawable/appolis_gray5"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:padding="2dp"
        android:textColor="@color/Black"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:text="User Departments: "/>
        <ImageButton
            android:id="@+id/btn_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:src="@android:drawable/arrow_up_float"/>

        </LinearLayout>
        <ListView
            android:id="@+id/lvUserDept"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="200dp"></ListView>

    </LinearLayout>
</LinearLayout>
  