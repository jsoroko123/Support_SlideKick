<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="20dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_user"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/Black"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/GrayAppolis"
                    android:textSize="14sp"
                    android:text="Username: "/>
                <EditText
                    android:id="@+id/et_superuser"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:imeOptions="actionNext"
                    android:layout_height="30dp"
                    android:background="@drawable/appolis_gray5"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_user_pass"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/Black"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/GrayAppolis"
                    android:textSize="14sp"
                    android:text="Password: "/>
                <EditText
                    android:id="@+id/et_superpassword"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:password="true"
                    android:layout_width="match_parent"
                    android:imeOptions="actionNext"
                    android:layout_height="30dp"
                    android:background="@drawable/appolis_gray5"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_user_confirm_pass"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/Black"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/GrayAppolis"
                    android:textSize="14sp"
                    android:text="Confirm Password: "/>
                <EditText
                    android:id="@+id/et_super_confirm_password"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:password="true"
                    android:layout_width="match_parent"
                    android:imeOptions="actionNext"
                    android:layout_height="30dp"
                    android:background="@drawable/appolis_gray5"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/Black"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/GrayAppolis"
                    android:textSize="14sp"
                    android:text="First Name: "/>
                <EditText
                    android:id="@+id/et_super_firstname"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:imeOptions="actionNext"
                    android:layout_height="30dp"
                    android:background="@drawable/appolis_gray5"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/Black"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/GrayAppolis"
                    android:textSize="14sp"
                    android:text="Last Name: "/>
                <EditText
                    android:id="@+id/et_super_lastname"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:imeOptions="actionNext"
                    android:layout_height="30dp"
                    android:background="@drawable/appolis_gray5"
                    android:maxLines="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/Black"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/GrayAppolis"
                    android:textSize="14sp"
                    android:text="Email: "/>
                <EditText
                    android:id="@+id/et_super_email"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:imeOptions="actionNext"
                    android:layout_height="30dp"
                    android:background="@drawable/appolis_gray5"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/Black"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/GrayAppolis"
                    android:textSize="14sp"
                    android:text="Phone: "/>
                <EditText
                    android:id="@+id/et_super_phone"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:imeOptions="actionDone"
                    android:layout_height="30dp"
                    android:background="@drawable/appolis_gray5"
                    android:maxLines="1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Gray00"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="bottom">
        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_gray_button"
            android:layout_marginRight="15dp"

            android:text="Cancel"/>
        <Button
            android:id="@+id/bt_next_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:background="@drawable/background_gray_button"

            android:text="Done"/>
    </LinearLayout>

</LinearLayout>
  