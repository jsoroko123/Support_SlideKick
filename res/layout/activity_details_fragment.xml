<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/line"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@drawable/gray_gray">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:text="Submitted By: "/>
        <TextView
            android:id="@+id/tv_client_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:text="Jeff Soroko"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
            android:textSize="12dp"
            android:paddingRight="10dp"
            android:text="02/14/2016"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_severity2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="@color/GrayAppolis"></LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@color/LightGray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Severity: "/>
        <TextView
        android:id="@+id/tv_severity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Critical"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="Open"/>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight=".5"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView android:id="@+id/case_details_list2"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_width="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/hidden_panel"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/LightGray"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:padding="5dp"
        android:layout_width="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal" >
        <ListView android:id="@+id/attach_list"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:dividerHeight="1dp" />
            </LinearLayout>

    </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:padding="3dp"
        android:background="@drawable/appolis"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2">
        <EditText
            android:id="@+id/txt_submit_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:hint="Enter Your Response"
            android:singleLine="false"
            android:minLines="1"
            android:maxLines="10"
            android:paddingLeft="10dp"
            android:textColor="@color/Black"
            android:textColorHint="#575656"
            android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:padding="2dp">
        <ImageView
            android:id="@+id/img_ex"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_gravity="right|bottom"
            android:clickable="true"
            android:src="@drawable/attachment" />

        <Button
            android:id="@+id/btn_submit_response2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Submit"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right|bottom"
            android:background="@drawable/background_gray_button"
            android:textSize="14sp" />
            </LinearLayout>
    </LinearLayout>



</LinearLayout>
